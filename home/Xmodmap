! keycode/sym <code>/<sym> = <normal> <shift> <switch> <shift+switch>

! remove Control and Lock modifiers
!remove Lock = Caps_Lock
!remove Control = Control_L

! use Alt_R as mod-switch
keycode 108 = Mode_switch

! put tilde back...
keycode 9 = Escape asciitilde

! make Home as Control_L
! (must before the next line, otherwise Home becomes Lock)
keycode 110 = Control_L Control_L Home Home

! swap Caps_Lock and Control_L
!keycode 37 = Caps_Lock
!keycode 66 = Control_L

! put modifiers back so that the new keys work
!add Lock = Caps_Lock
add Control = Control_L
